<% if @review %>
<h1> New Comment for <%= review.title %></h1> 
<% else %>
<h1> New Comment </h1> 
<% end %>


<%= form_for([@review, @comment]) do |f| %>

   <% if !@review %>
    <%= f.label :review %>
    <%= f.collection_select :review_id, Review.all, :id, :title %>
    <% end %>

    <%= f.label :content%>
    <%= f.text_field :content%>

    <%= f.submit %>

    <% end %>